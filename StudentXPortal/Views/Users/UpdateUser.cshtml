@model StudentX.StudentXPortal.Models.User
@using StudentX.StudentXPortal.Models

@{
    ViewData["Title"] = "Update User";
}

@section Styles {
    <link rel="stylesheet" href="~/css/theme.css" />
}

<div class="page-container">

    <h2>Kullanıcıyı Güncelle</h2>

    <form asp-action="UpdateUser" asp-route-id="@Model.Id" method="post">

        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" />
        </div>

        <div class="form-group">
            <label asp-for="UserType"></label>
            <select asp-for="UserType" class="form-control">
                <option value="0" selected="@((int)Model.UserType == 0)">Öğrenci</option>
                <option value="1" selected="@((int)Model.UserType == 1)">Öğretmen</option>
                <option value="2" selected="@((int)Model.UserType == 2)">Admin</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>


</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}